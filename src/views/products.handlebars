<div>
    <h1>BIENVENIDO {{user.name}}</h1>
    <p>Correo: {{user.email}}</p>
</div>

<div>

<h2>PRODUCTOS</h2>

{{#each products}}
<p>Poducto: {{this.title}}</p>
<p>Descripcion del producto: {{this.description}}</p>
<p>Precio: ${{this.price}}</p>
<p>Stock: {{this.stock}} unidades</p>
<button onclick="addToCart('{{../cid}}', '{{_id}}')">Agregar al carrito</button>
