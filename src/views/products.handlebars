<br />
{{/each}}
{{#if hasPrevPage}}
<a href="/products?page={{prevPage}}"><button>Anterior</button></a>
{{/if}}

{{page}}

{{#if hasNextPage}}
<a href="/products?page={{nextPage}}"><button>Siguiente</button></a>
{{/if}}

<a href="/carts"><button>Ir al carrito</button></a>
<a href="/home"><button>Ir al Home</button></a>
</div>